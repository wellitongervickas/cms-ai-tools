{
  "name": "@repo/payload",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "rootDir": "src",
  "main": "./src/index.ts",
  "exports": {
    "./*": "./src/*.ts",
    ".": "./src/index.ts",
    "./collections": {
      "import": "./src/collections/index.ts",
      "types": "./dist/collections/index.d.ts",
      "default": "./src/collections/index.ts"
    },
    "./collections/*": {
      "import": "./src/collections/*.ts",
      "types": "./dist/collections/*.d.ts",
      "default": "./src/collections/*.ts"
    },
    "./collections/fields": {
      "import": "./src/collections/fields/index.ts",
      "types": "./dist/collections/fields/index.d.ts",
      "default": "./src/collections/fields/index.ts"
    },
    "./collections/fields/*": {
      "import": "./src/collections/fields/*.ts",
      "types": "./dist/collections/fields/*.d.ts",
      "default": "./src/collections/fields/*.ts"
    },
    "./plugins": {
      "import": "./src/plugins/index.ts",
      "types": "./dist/plugins/index.d.ts",
      "default": "./src/plugins/index.ts"
    },
    "./plugins/*": {
      "import": "./src/plugins/*.ts",
      "types": "./dist/plugins/*.d.ts",
      "default": "./src/plugins/*.ts"
    },
    "./globals": {
      "import": "./src/globals/index.ts",
      "types": "./dist/globals/index.d.ts",
      "default": "./src/globals/index.ts"
    },
    "./globals/*": {
      "import": "./src/globals/*.ts",
      "types": "./dist/globals/*.d.ts",
      "default": "./src/globals/*.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "types": "./dist/utils/index.d.ts",
      "default": "./src/utils/index.ts"
    },
    "./utils/*": {
      "import": "./src/utils/*.ts",
      "types": "./dist/utils/*.d.ts",
      "default": "./src/utils/*.ts"
    },
    "./locales": "./src/locales/config.ts"
  },
  "private": true,
  "scripts": {
    "test": "vitest run",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "dev": "tsc --watch",
    "build": "tsc"
  },
  "peerDependencies": {
    "@payloadcms/db-postgres": "^3.x",
    "@payloadcms/next": "^3.x",
    "@payloadcms/richtext-lexical": "^3.x",
    "@payloadcms/storage-vercel-blob": "^3.x",
    "@payloadcms/translations": "^3.x",
    "@payloadcms/ui": "^3.x",
    "payload": "^3.x",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.42",
    "@types/markdown-pdf": "^9.0.5",
    "ai": "^5.0.60",
    "bufferutil": "^4.0.9",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-pdf": "^11.0.0",
    "puppeteer": "^24.23.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/handlebars": "^4.0.40",
    "@types/lodash": "^4.17.20",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "eslint": "^9.37.0",
    "typescript": "5.6.2",
    "vitest": "^3.2.4"
  }
}
